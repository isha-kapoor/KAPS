  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</head>

<body id=body>

    <div class="move-down"  >
        <!-- style="margin-left:16%" -->

          <section class="move-down">
            <table class="Farmer-Requests-Status">
                <thead>

                        <tr>
                        <th>Notifications</th>
                        </tr>
                        </thead>
                  <tbody>
                      <% order.forEach(function(row){%>
                        <tr>
                          <%  if(row.paid){ %>
                            <td>Your have recieved the payment for order <%=row.oid%></td>
                            <%  } else if(row.ready) {%>
                              <td>Payment is ready of order id <%=row.oid%></td>
                        <%  } else if(row.intransit) {%>
                          <td>Your order <%=row.oid%> is In-transit</td>
                          <%  } else if(row.approve) {%>
                            <td>Your order <%=row.oid%> is Approved</td>
                        <%}%>
                        </tr>
                        <% }) %>
                  </tbody>
            </table>
          </section>
          <div class="row">
            <button type="button" name="button" class="button-add" ><a href="##" onClick="history.go(-1); return false;" style="color: white;">Go back</a></button>
          </div>
        </div>


</body>
</html>
