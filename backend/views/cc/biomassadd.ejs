  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</head>

<body id=body>
   <%- include('../partials/ccheader') %>
    <div class="move-down" >
      <!-- style="margin-left:16%" -->
          <form method="post" action="/biomassDB" autocomplete="off"> <!--wasteDB-->
          <div class="w3-card">
            <div class="card-body">
                <h6 class="card-text mb-5"> Edit Database </h6>
              <div class="row apply-margin">
                <div class="col-sm-6 text-primarys">
                  <h6 class="mb-2 apply-font"><label for="waste-needed"> Select Raw material</label></h6>
                </div>
                <div class="col-sm-6 text-secondary ">
                  <select name="RawMaterial" id="waste-needed" required>
                    <%records.forEach(function(row){%>
                        <option value="<%=row%>"><%=row%></option>
                        <!-- <option value="Wheat Straw">Wheat Straw</option>
                        <option value="Rice Husk">Rice Husk</option>
                        <option value="Rice Straw">Rice Straw</option>
                        <option value="Cotton Stalk">Cotton Stalk</option>
                        <option value="Bagasse">Bagasse</option> -->
                        <% }) %>

                  </select>
                </div>
              </div>
              <div class="row apply-margin">
                <div class="col-sm-6 text-primarys">
                  <h6 class="mb-2 apply-font"><label for="gross">Gross Calorific Value </label></h6>
                </div>
                <div class="col-sm-6 text-secondary ">
                  <input class="apply-padding"type="text"  id="gross" placeholder="placeholder" name="gross" value="0" required>
                </div>
              </div>
              <div class="row">
                  <button class="button-add" type="submit">Save</button>
              </div>
            </div>
          </div>
          </form>
        </div>
  </body>
  </html>
