<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Collection Centre: Farmer Requests</title>
  <link rel="icon" type="image/ico" href="images/logo.png">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="../css/stylecc.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</head>

<body id=body>
   <%- include('../partials/ccheader') %>
    <div class="move-down" style="margin-left:16%" >
      <!-- style="margin-left:16%" -->

        <section class="move-down">
          <table class="farmer-req">
              <thead>
                <tr class="status">
                  <th colspan="6" class="status1"> </th>
                  <th colspan="4" class="status2"> Status </th>
                </tr>

      						<tr>
      							<th>Request<br> ID</th>
                    <th>Request<br> Date</th>
      							<th>Crops <br>Residue</th>
                    <th>Land <br>Area</th>
                    <th>Harvesting <br>Date</th>
                    <th class="status1">Contact<br> No </th>
                    <th>Approve<br> Order</th>
      							<th>In <br>Transit</th>
                    <th>Request<br> Info</th>
                    <th>Close<br> Order</th>
      						</tr>

      					</thead>
                <tbody>
                  <% order.forEach(function(row){%>
                    <tr>
                      <td><%=row.oid %></td>
                      <td><%=row.orderDate %></td>
                      <td><%= row.RawMaterial %></td>
                      <td><%= row.LandArea %></td>
                      <td><%= row.date %>Kg</td>
                      <td><%= row.contact %></td>
                      <td><a  class="btn btn-primary btn-xs" href="/check/<%= row._id %> "><i class="fa fa-check" aria-hidden="true" ></i></a></td>
                  <%    if(row.approve){ %>
                  <td ><a  class="btn btn-primary btn-xs" href="/transit/<%= row._id %> "><i class="fa fa-check" aria-hidden="true" ></i></a></td>
                  <%  } else {%>
                  <td></td>
                  <%}%>
                  <%    if(row.intransit){ %>
                  <td ><a  class="btn btn-primary btn-xs " href="/ready/<%= row._id %> " onclick="f()"><i class="fa fa-check" aria-hidden="true" ></i></a></td>
                  <%  } else {%>
                  <td></td>
                  <%}%>
                  <%    if(row.ready){ %>
                  <td ><a  class="btn btn-danger btn-xs" href="/paid/<%= row._id %> "><i class="fa fa-check" aria-hidden="true" ></i></a></td>
                  <%  } else {%>
                  <td></td>
                  <%}%>
                    </tr>
                    <% }) %>
                </tbody>
          </table>
        </section>
      </div>
  </body>
  </html>
